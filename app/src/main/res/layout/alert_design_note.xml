<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alert_note_header_layout_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/alert_note_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alert_note_content_layout_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        app:counterEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_note_header_layout_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/alert_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="content"></com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/alert_note_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Click To Select A Date"
        app:layout_constraintBottom_toTopOf="@+id/alert_note_header_layout_text"
        app:layout_constraintEnd_toEndOf="parent"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>